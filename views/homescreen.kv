#:set button_size_hint 0.2, 0.60
#:set header_pos_hint 1, 0.30
#:include widgets/clock.kv

<Screen_Home>:
    Home:
        canvas.before:
            Rectangle:
                size: self.size
                source: 'assets/images/background_logos.jpg'

        orientation: "vertical"

        Header:
            pos_hint: {"center_x": 0.5, "top": 1}
            size_hint: header_pos_hint

        Home_Modes:
            orientation: "horizontal"
            spacing: "30dp"
            padding: "30dp"

            ModeButton:
                pos_hint: {"center_x": 0.2, "center_y": 0.5}
                background_normal: "assets/images/button_hourly_mode.png"
                on_release: root.manager.current = 'hourly'

            # Image:
            #     source: "images/button_hourly_mode.png"
            #     center_x: self.parent.center_x
            #     center_y: self.parent.center_y

            # canvas:
            #     Rectangle:
            #         pos: self.pos
            #         size: self.size
            #         source: "images/button_hourly_mode.png"

            ModeButton:
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                background_normal: "assets/images/button_chart_mode.png"

            ModeButton:
                pos_hint: {"center_x": 0.8, "center_y": 0.5}
                background_normal: "assets/images/button_update_manual.png"

<ModeButton@Button>
    size_hint: button_size_hint
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.5
        BoxShadow:
            pos: self.pos
            size: self.size
            blur_radius: dp(15)
            offset: dp(2), -dp(2)
        #countour:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: dp(3)
            rounded_rectangle: self.x, self.y, self.width, self.height, dp(2)   
                      

<Header>:
    orientation: "horizontal"
    padding: "5dp"

    canvas:
        Color:
            rgb: hex_to_rgb('#DCEAF7')
        Rectangle:
            pos: self.pos
            size: self.size
        #dividing horizontal line:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: dp(1)
            points: self.x, self.y, self.width, self.y

    ClockWidget:
        label_alignment: "left"
        pos_hint: {"x": 0.80}
        size_hint: .75, 1
        padding: "30dp", "0dp"

    Image:
        source: "assets/images/logo_full.png"
        pos_hint: {"right": 1}
        size_hint: .25, 1
        fit_mode: "contain"